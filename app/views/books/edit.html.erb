<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>

  <div class="text">
    <label>Title</label>
    <%= f.text_field :title %>
  </div>
  <div class="text">
  <label>Body</label>
  <%= f.text_area :body %>
</div>

<div class="form">
  <%= f.submit 'Update Book' %>
</div>
<% end %>

<span>
    <%= link_to 'Show', "/books/#{@book.id}" %> | <%= link_to 'Back', "/books" %>
</span>